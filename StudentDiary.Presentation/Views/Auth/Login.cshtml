@model StudentDiary.Services.DTOs.LoginDto
@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>
<div class="text-success">@TempData["StatusMessage"]</div>
<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <a asp-action="ForgotPassword" class="btn btn-link">Forgot Password?</a>
    <a asp-action="Register" class="btn btn-link">Register</a>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

