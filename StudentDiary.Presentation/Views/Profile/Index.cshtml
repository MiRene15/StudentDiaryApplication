@model StudentDiary.Services.DTOs.UserProfileDto
@{
    ViewData["Title"] = "Profile";
}
<h2>Profile</h2>
<div class="text-success">@TempData["StatusMessage"]</div>
@if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
{
    <img src="@Model.ProfilePicturePath" alt="Profile Picture" style="max-height:150px;" class="mb-3" />
}
<dl class="row">
    <dt class="col-sm-2">Username</dt>
    <dd class="col-sm-10">@Model.Username</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>
    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Model.LastName</dd>
    <dt class="col-sm-2">Joined</dt>
    <dd class="col-sm-10">@Model.DateCreated:u</dd>
</dl>
<p>
    <a asp-action="Edit" class="btn btn-primary">Edit Profile</a>
</p>
<hr />
<h4>Upload Profile Picture</h4>
<form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <input type="file" name="file" class="form-control" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-secondary">Upload</button>
</form>

